{
  "name": "screwdriver",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,json}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,html,scss,json}\"",
    "lint": "ng lint",
    "test": "ng test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.8.0",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@taiga-ui/cdk": "^5.0.0-rc.3",
    "@taiga-ui/core": "^5.0.0-rc.3",
    "@taiga-ui/event-plugins": "^5.0.0-rc.3",
    "@taiga-ui/icons": "^5.0.0-rc.3",
    "@taiga-ui/kit": "^5.0.0-rc.3",
    "@taiga-ui/layout": "^5.0.0-rc.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler-cli": "^21.1.0",
    "angular-cli-ghpages": "^3.0.2",
    "angular-eslint": "21.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jsdom": "^27.1.0",
    "less": "^4.5.1",
    "less-loader": "^12.3.1",
    "prettier": "3.8.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.50.1",
    "vitest": "^4.0.8"
  }
}
